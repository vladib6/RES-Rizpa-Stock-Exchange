               <children>
                  <Label fx:id="username" alignment="CENTER" prefHeight="121.0" prefWidth="260.0" text="username" textAlignment="CENTER">
                     <font>
                        <Font size="32.0" />
                     </font>
                     <graphic>
                        <ImageView fx:id="userImg" fitHeight="80.0" fitWidth="82.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../Resources/user.png" />
                           </image>
                           <viewport>
                              <Rectangle2D />
                           </viewport>
                        </ImageView>
                     </graphic>
                  </Label>
                  <Label fx:id="holdingsValue" alignment="CENTER" prefHeight="121.0" prefWidth="260.0" text="Value">
                     <font>
                        <Font size="32.0" />
                     </font>
                     <graphic>
                        <ImageView fitHeight="80.0" fitWidth="93.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../Resources/holdings.png" />
